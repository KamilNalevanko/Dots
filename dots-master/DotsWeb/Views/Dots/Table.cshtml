
@{
    ViewData["Title"] = "Table";
}

<h1>Poradie</h1>


<table class="tabulka">
    <tr>
        <th>Poradie</th>
        <th>Meno</th>
        <th>Skóre</th>
    </tr>
    @{
        for (int i = 0; i < Model.Score.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model.Score[i].Name</td>
                <td>@Model.Score[i].Value</td>
            </tr>
        }
    }
</table>


<div class="menu">
    <div class="menu-tlacidlo">

        <a href="/Dots/" class="bodky"><span class="ikonka">Hrať znova</span></a>
        <br />
    </div>


</div>