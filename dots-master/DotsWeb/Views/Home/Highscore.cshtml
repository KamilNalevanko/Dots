@using DotsWeb.Models;
@model HighscoreModel

@{
    ViewData["Title"] = "Highscore";
}

<h1>Highscore</h1>

<table class="tabulka">
    <tr>
        <th>Poradie</th>
        <th>Meno</th>
        <th>Skóre</th>
    </tr>
    @{
        for (int i = 0; i < Model.Score.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model.Score[i].Name</td>
                <td>@Model.Score[i].Value</td>
            </tr>
        }
    }
</table>
